<p id="notice"><%= notice %></p>

<h1>Listing Blog Posts</h1>

<div class="row">
  <% @blog_posts.each do |blog_post| %>
    <div class="col s12 m6">
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <span class="card-title"><%=blog_post.title%></span>
          <i>by <%=blog_post.author%></i>
          <p><%= blog_post.blog_entry %></p>
        </div>
        <div class="card-action">
          <%= link_to 'Show', blog_post %>
          <%= link_to 'Edit', edit_blog_post_path(blog_post) %>
          <%= link_to 'Destroy', blog_post, method: :delete, data: { confirm: 'Are you sure?' } %>
        </div>
      </div>
    </div>
  <% end %>
</div>


<%= link_to 'New Blog post', new_blog_post_path %>